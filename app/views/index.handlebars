<h1>Butcher's Block Burger Menu!</h1>

<h2>Ready to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> cutting-board/cutting-board eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> cutting-board/cutting-board eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="new-burger">

  <div class="form-group">
    <label for="named-burger">Burger Name:</label>
    <input type="text" id="#named-burger" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Hungry? Why Wait</label><br>
    <input type="radio" name="eaten" value="1" checked> Chow Now!<br>
    <input type="radio" name="eaten" value="0"> Menu Item!
  </div>

  <button type="submit">Add Burger</button>
</form>
